# FlowPay Frontend Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Stellar Network Configuration
# ===========================================
# Options: MAINNET, TESTNET
VITE_STELLAR_NETWORK=TESTNET

# Stellar Horizon API URL
VITE_HORIZON_URL=https://horizon-testnet.stellar.org

# Soroban RPC URL
VITE_SOROBAN_URL=https://soroban-testnet.stellar.org

# ===========================================
# Smart Contract Addresses (Update after deployment)
# ===========================================
VITE_CONTRACT_ESCROW_CORE=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_CONTRACT_LIQUIDITY_ROUTER=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
VITE_CONTRACT_YIELD_HARVESTER=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===========================================
# Token Addresses (Stellar Asset Contracts)
# ===========================================
# USDC Token Address (Required)
VITE_TOKEN_USDC=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Native XLM Address (Required)
VITE_TOKEN_XLM=CXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# OUSG Token Address (Optional - for yield features)
VITE_TOKEN_OUSG=

# Fiat Currency Tokens (Optional - for currency conversion)
VITE_TOKEN_INR=
VITE_TOKEN_KES=
VITE_TOKEN_NGN=

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable yield harvester features
VITE_ENABLE_YIELD_HARVESTER=true

# Enable/disable liquidity router features
VITE_ENABLE_LIQUIDITY_ROUTER=true

# Enable mock data for development (set to false for production)
VITE_ENABLE_MOCK_DATA=false
